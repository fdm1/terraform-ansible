#! /bin/bash

set -eu -o pipefail
PROJECT_ROOT=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/../
source ${PROJECT_ROOT}/bin/_shared.sh

BUCKET=fdm1-default-bucket

if ! aws s3 ls s3://$BUCKET &> /dev/null; then
	aws s3 mb s3://$BUCKET
fi

tfenv install
terraform init -backend-config="bucket=$BUCKET"
